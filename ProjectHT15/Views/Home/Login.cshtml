@using ProjectHT15.Models.Context
@model ProjectHT15.Models.LoginModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width"/>
    <link href="~/Content/_LayoutCSS.css" rel="stylesheet"/>
    <title>Login</title>
</head>

<body>
   
    @using (Html.BeginForm("Login", "Home"))
    {
        <div class="form-group">
            <div id="login">
                <div class="col-lg-12 col-md-12 col-sm-12">
                    <div class="col-lg-4 col-md-5 col-sm-6 col-xs-7">
                        @Html.DisplayNameFor(x => x.Salt)
                        @Html.ValidationMessageFor(x => x.Salt)
                        @Html.TextBoxFor(x => x.Salt, new { @class = "form-control" })

                        @Html.DisplayNameFor(x => x.Password)
                        @Html.ValidationMessageFor(x => x.Password)
                        @Html.PasswordFor(x => x.Password, new { @class = "form-control" })
                    </div>
                </div>
            </div>
        </div>


        <div class="form-group">
            <div class="col-lg-6">
                <input id="btnRegister" type="submit" value="Login" class="btn btn-danger btm-sm glyphicon">
                <span>Or register <a href="#menu-toggle" id="menu-toggle">here</a></span>
            </div>
        </div>
    }
    <div class="col-lg-4 col-md-4 col-sm-4">
        @Html.Partial("_RegisterUser")
    </div>
</body>
</html>
