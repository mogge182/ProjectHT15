@model ProjectHT15.Models.RegisterModel

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm("RegisterUser", "Home"))
{
    <div id="wrapper">
        <div id="sidebar-wrapper">
            <ul class="sidebar-nav">
                <li class="sidebar-brand">
                    <p>Register Form</p>
                </li>
                <li>
                    <div class="col-lg-12">
                        @Html.DisplayNameFor(x => x.UserName)
                        @Html.ValidationMessageFor(x => x.UserName)
                        @Html.TextBoxFor(x => x.UserName, new { @class = "form-control" })
                    </div>
                </li>
                <li>
                    <div class="col-lg-12">
                        @Html.DisplayNameFor(x => x.FirstName)
                        @Html.ValidationMessageFor(x => x.FirstName)
                        @Html.TextBoxFor(x => x.FirstName, new { @class = "form-control" })
                    </div>
                </li>
                <li>
                    <div class="col-lg-12">
                        @Html.DisplayNameFor(x => x.LastName)
                        @Html.ValidationMessageFor(x => x.LastName)
                        @Html.TextBoxFor(x => x.LastName, new { @class = "form-control" })
                    </div>
                </li>
                <li>
                    <div class="col-lg-12">
                        @Html.DisplayNameFor(x => x.Email)
                        @Html.ValidationMessageFor(x => x.Email)
                        @Html.TextBoxFor(x => x.Email, new { @class = "form-control" })
                    </div>
                </li>
                <li>
                    <div class="col-lg-12">
                        @Html.DisplayNameFor(x => x.Password)
                        @Html.ValidationMessageFor(x => x.Password)
                        @Html.PasswordFor(x => x.Password, new { @class = "form-control" })
                    </div>
                </li>
                <li>
                    <div class="col-lg-12">
                        @Html.DisplayNameFor(x => x.ConfirmPassword)
                        @Html.ValidationMessageFor(x => x.ConfirmPassword)
                        @Html.PasswordFor(x => x.ConfirmPassword, new {@class = "form-control"})
                        
                    </div>
                </li>
                <li>
                    
                    <div class="col-lg-12">
                        <input type="submit" value="Register" class="btn btn-danger btm-sm glyphicon"/>
                    </div>
                </li>
            </ul>
        </div>
    </div>


}
<script>
    $("#menu-toggle").click(function (e) {
        e.preventDefault();
        $("#wrapper").toggleClass("toggled");
    });
</script>