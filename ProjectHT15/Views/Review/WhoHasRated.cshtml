@using System.Linq.Expressions
@model List<ProjectHT15.Models.WhoHasRatedModel>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <link href="~/Content/_LayoutCSS.css" rel="stylesheet" />
    <meta name="viewport" content="width=device-width" />
    <title>WhoHasRated</title>
</head>
<body>
    <div>
        <table class="table table-striped table-bordered table-condensed">
            <thead >
                <tr>
                    <th>
                        Username
                    </th>
                    <th>
                        Rating
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in @Model)
            {
                    <tr>
                        <td>
                            @Html.ActionLink(item.UserName , "UsersReviews","Review", new { id = item.UserId}, null) 
                        </td>
                        <td>
                            @item.Rating
                        </td>
                    </tr>
                }
            </tbody>

        </table>
    </div>
</body>
</html>
